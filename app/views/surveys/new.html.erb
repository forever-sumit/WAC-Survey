<header class="main-header inner-header">
  <div class="container">
    <%= image_tag('inner-header.jpg') %>
  </div>
</header>
<div class="main-content">
  <section class="survey-questions">
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <a href="index.html">
            <div class="logo">
              <%= image_tag('logo.png') %>
            </div>
          </a>
        </div>
        <div class="col-md-8">
          <div class="start-here-content">
            <h1>Data Bias Assessment Tool ~Survey Edition</h1>
            <p>Answer the following questions about your dataset.</p>
            <p>We’ll show you your results once you’re complete</p>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="questions-block">
            <h2>Who - Questions about who the data was collected by and from</h2>
            <div class="section-block">
              <% @sections.each do |section| %>
                <h3>Section <%= section.in_order %>: <%= section.name %></h3>
                <% questions = section.questions.order(:in_order) %>
                <% questions.each do |question|%>
                  <div class="single-question-block">
                    <h4 class="singleQuestion">
                      <%= question.question_title %>
                    </h4>
                    <%= collection_select(:answer, :question_id, question.answers, :id, :answer_title, {prompt: true}, {class: 'form-control'}) %>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>

          <div class="submit-btn">
            <%= link_to '', class: "btn btn-default" do %>
              Submit
            <% end %>
            <%= will_paginate @sections, :page_links => false, class: "btn btn-default", id: 'next-btn'  %>
          </div>
        </div>
      </div>
    </div>
  </section>
  <div class="status-bar-bottom">
    <div class="container">
      <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="70"
        aria-valuemin="0" aria-valuemax="100" style="width:70%">
          Progress
        </div>
      </div>
    </div>
  </div>
</div>
